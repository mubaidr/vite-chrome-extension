{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "src/*": ["./src/*"]
    },
    "types": ["chrome-types"]
  },
  "include": [
    "vite.config.ts",
    "manifest.config.ts",
    "manifest.json",
    ".eslintrc.cjs"
  ]
}
